{
  "manifest_version": 3,
  "name": "YouTube Markdown Comments",
  "version": "0.1.0",
  "description": "Render Markdown inside YouTube comments using $youtube_md",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
